{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc: build",
      "type": "shell",
      "command": "npx",
      "args": [
        "tsc",
        "-p",
        "tsconfig.json"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$tsc"
      ]
    }
    ,
    {
      "label": "tsc: watch",
      "type": "shell",
      "command": "npx",
      "args": [
        "tsc",
        "-p",
        "tsconfig.json",
        "--watch"
      ],
      "isBackground": true,
      "problemMatcher": [
        "$tsc-watch"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
