{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch index.html in Chrome",
      "file": "${workspaceFolder}/index.html",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "tsc: build",
      "sourceMaps": true
    }
    ,
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch index.html in Chrome (tsc --watch)",
      "file": "${workspaceFolder}/index.html",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "tsc: watch",
      "sourceMaps": true
    }
  ]
}
